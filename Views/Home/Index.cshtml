@{
    ViewData["Title"] = "Home Page";
}

<form class="form-horizontal">
    <fieldset>

        <!-- Form Name -->
        <legend>ФИО</legend>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="surname">Фамилия</label>
            <div class="col-md-5">
                <input id="surname" name="surname" type="text" placeholder="Введите сюда свою фамилию" class="form-control input-md" required="">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="name">Имя</label>
            <div class="col-md-5">
                <input id="name" name="name" type="text" placeholder="Введите сюда свое имя" class="form-control input-md" required="">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="middle name">Отчество</label>
            <div class="col-md-5">
                <input id="middle name" name="patronymic" type="text" placeholder="Введите сюда свое отчество" class="form-control input-md" required="">

            </div>
        </div>

        <!-- Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="savebutton">Нажмите для создания формы</label>
            <div class="col-md-4">
                <button id="savebutton" name="savebutton" class="btn btn-primary">Готово</button>
            </div>
        </div>
    </fieldset>
    </form>

